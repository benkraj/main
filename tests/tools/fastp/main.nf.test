nextflow_pipeline {

    name "Test --tools fastp"
    script "main.nf"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
                test = true
                tools = 'fastp'
            }
        }

        then {
            assert workflow.success
            assert new File("$outputDir/fastp/test.fastp.fastq.gz").exists()
            assert new File("$outputDir/fastp/test.fastp.html").exists()
            assert new File("$outputDir/fastp/test.fastp.log").exists()

            assert snapshot(
                "$outputDir/fastp/test.fastp.json",
                "$outputDir/fastp/versions.yml"
            ).match()
        }

    }
}
