nextflow_pipeline {

    name "Test --tools fastqc"
    script "main.nf"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
                test = true
                tools = 'fastqc'
            }
        }

        then {
            assert workflow.success
            assert new File("$outputDir/fastqc/test_fastqc.zip").exists()

            assert snapshot(
                "$outputDir/fastqc/test_fastqc.html",
                "$outputDir/fastqc/versions.yml"
            ).match()
        }

    }
}
